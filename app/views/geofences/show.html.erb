
<section class="show-container">

  <header>
    <%= flash_notice %>
    <div class="buttons-container">
      <%= link_to 'Back', geofences_path, class: 'btn btn-info' %>
      <%= link_to 'Edit', edit_geofence_path(@geofence), class: 'btn btn-warning' %>
    </div>
  </header>

  <main>
    <dl>
      <dt>Latitude:</dt>
      <dd>
        <%= @geofence.latitude %>
      </dd>

      <dt>Longitude:</dt>
      <dd>
        <%= @geofence.longitude %>
      </dd>

      <dt>Radius (in meters):</dt>
      <dd>
        <%= @geofence.radius %>
      </dd>


      <dt>Place:</dt>
      <dd>
        <div id="map"></div>
      </dd>
    </dl>
  </main>
  
</section>

<%= render 'shared/scripts', object: @geofence %>
