<div id="map"></div>

<%= form_with(model: geofence, local: true, id: 'geofence-form') do |form| %>
  <% if geofence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(geofence.errors.count, "error") %> prohibited this geofence from being saved:</h2>

      <ul>
      <% geofence.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :latitude %>
    <%= form.text_field :latitude, id: :geofence_latitude, class: 'geo-class form-control', onchange: 'setCoords()' %>
  </div>

  <div class="form-group">
    <%= form.label :longitude %>
    <%= form.text_field :longitude, id: :geofence_longitude, class: 'geo-class form-control', onchange: 'setCoords()' %>
  </div>

  <div class="form-group">
    <%= form.label :radius, "Radius (in meters)" %>
    <%= form.text_field :radius, id: :geofence_radius, class: 'form-control' %>
  </div>

  <div class="form-group submit-container">
    <%= form.submit  %>
  </div>
<% end %>

<%= render 'scripts', geofence: geofence %>
